<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Bldg name</th>
      <th>Bldg ammenities</th>
      <th>Rental range</th>
      <th>Contact name</th>
      <th>Contact number</th>
      <th>Contact hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.user_id %></td>
        <td><%= apartment.address %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.zip %></td>
        <td><%= apartment.bldg_name %></td>
        <td><%= apartment.bldg_ammenities %></td>
        <td><%= apartment.rental_range %></td>
        <td><%= apartment.contact_name %></td>
        <td><%= apartment.contact_number %></td>
        <td><%= apartment.contact_hours %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

